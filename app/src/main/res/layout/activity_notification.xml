<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/mBtnSendCommonNotify"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:text="普通通知" />

            <Button
                android:id="@+id/mBtnSendStickNotify"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:text="悬停通知" />

            <Button
                android:id="@+id/mBtnSendFoldNotify"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:text="折叠通知" />

            <Button
                android:id="@+id/mBtnSendTagNotify"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:text="Tag通知" />

            <Button
                android:id="@+id/mBtnCancelNotification"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:text="取消普通通知" />

            <Button
                android:id="@+id/mBtnCancelStickNotification"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:text="取消悬停通知" />

            <Button
                android:id="@+id/mBtnCancelFoldNotification"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:text="取消折叠通知" />

            <Button
                android:id="@+id/mBtnCancelNotificationTag"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:text="取消Tag通知" />

            <Button
                android:id="@+id/mBtnCancelAll"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:text="取消全部通知" />
        </LinearLayout>

    </ScrollView>
</layout>
